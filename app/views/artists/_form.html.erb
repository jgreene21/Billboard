<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>


<%= form_for @artist, :html => {:class => "form center"} do |f| %>

 <div class="form-group">

 <%= f.label :name, class: "form-label" %>

 <%= f.text_field :name, class: "form-control" %>

 </div>

 <%= f.submit class: "ui secondary button" %>

<% end %>